<!DOCTYPE html>
<html lang="en">
<head>
    <title>{% block title %} {% endblock %} - MySite</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="min-vh-100 d-flex flex-column">
<nav class="navbar navbar-expand-sm bg-dark navbar-dark sticky-top">
    <div class="container-fluid">
        <span class="navbar-brand" >MySite</span>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse " id="collapsibleNavbar">
            <div class="w-100 d-flex justify-content-between">
                <ul class="navbar-nav">
                    {% set uri = app.request.uri.path ?? '' %}

                    {% if route_exists('posts.index') %}
                        <li class="nav-item">
                            <a class="nav-link {%if uri starts with '/posts' %}active{% endif %}" href="{{ path('posts.index') }}">Blog</a>
                        </li>
                    {% endif %}
                    {% if auth and auth.isAdmin %}
                        {% if route_exists('admin.index') %}
                            <li class="nav-item">
                                <a class="nav-link {%if uri starts with '/admin' %}active{% endif %}" href="{{ path('admin.index') }}">Administration</a>
                            </li>
                        {% endif %}
                    {% endif %}


                </ul>
                <ul class="navbar-nav">
                    {% if auth.isLoggedIn %}
                        {% if route_exists('logout') %}
                            <li class="nav-item">
                                <a class="nav-link {%if uri starts with '/logout' %}active{% endif %}" href="{{ path('logout') }}"> Logout {{ auth.user.email }}</a>
                            </li>
                        {% endif %}
                    {%else %}

                        {% if route_exists('register') %}
                            <li class="nav-item">
                                <a class="nav-link {%if uri starts with '/register' %}active{% endif %}" href="{{ path('inscription') }}">Registration</a>
                            </li>
                        {% endif %}
                        {% if route_exists('login') %}
                            <li class="nav-item">
                                <a class="nav-link {%if uri starts with '/login' %}active{% endif %}" href="{{ path('connexion') }}">Login</a>
                            </li>
                        {% endif %}
                    {% endif %}

                </ul>
            </div>

        </div>
    </div>
</nav>
<main class="container-fluid px-5 mt-2 flex-grow-1">

    <div class="row">
        <div class="col-md-6" style="margin: auto;">
            {% set types=['success','danger','warning','info'] %}
            {% for type in types %}
                {% set message= flash(type) %}
                {% if message %}
                    <div class="alert alert-{{ type}} alert-dismissible">
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        {{ message }}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
    {% block body %}{% endblock %}
</main>
<footer class="text-center text-muted mt-5 mb-3">
    <p>&copy; {{ "now"|date("Y") }} - MySite</p>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
